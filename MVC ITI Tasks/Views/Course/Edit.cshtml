@model Courses
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="MinDegree"></label>
        <input asp-for="MinDegree" class="form-control" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
     <div>
        <label asp-for="Dept_Id"></label>
        <select name="Dept_Id" class="form-control">
            @foreach (Department item in ViewBag.deptList)
            {
                if (Model.Dept_Id == item.Id)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }

        </select>
        <span asp-validation-for="Dept_Id" class="text-danger"></span>
    </div>
    <input type="submit" value="Edit" class="btn btn-success" />
    <a asp-action="GetAll" class="btn btn-success" >Back to List</a>
</form>

@section Scripts{
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


