@model List<Student>
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Address</td>
            <td>Image</td>
            <td>Grade</td>
            <td>Department</td>
            <td></td>
        </tr>
    </thead>
    @foreach(Student item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td><img src="/Images/@item.ImageURL" style="width:30px" /></td>
            <td>@item.Grade</td>
            <td>@item.Department.Name</td>
       
        </tr>
    }
</table>
<br />
<br />
<a asp-action="ShowResult"  class="btn btn-success">Show Result Action</a>

  