@model List<Instructor>
@{
    ViewData["Title"] = "Instructors";
}

<h1>Instructors </h1>
<br />
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Salary</td>
            <td>Address</td>
            <td>ImageURL</td>
            <td>Department</td>
            <td>Course</td>
            <td></td>

        </tr>
    </thead>
    @foreach(Instructor item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td><img src="/Images/@item.ImageURL" style="width:35px"/></td>
            <td>@item.Department.Name</td>
            <td>@item.Course.Name</td>
            <td>
                <a asp-action="Details" asp-controller="Instructor" asp-route-Id="@item.Id"
                class="btn btn-primary">Details</a>
                <a asp-action="Edit" asp-controller="Instructor" asp-route-Id="@item.Id"
                class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-controller="Instructor" asp-route-Id="@item.Id"
                class="btn btn-danger" onclick="return confirm('Are you sure to delete item ..?')">Detele</a>
            </td>
        </tr>   
    }
</table>
<a asp-action="Add" asp-controller="Instructor" class="btn btn-success">Add Instructor</a>
